<!DOCTYPE html>
<html lang="es">
  <!-- Include Head -->
  <%- include('partials/head', {title: '¿?'}) %>
  <body>
    <!-- Header -->
    <%- include('partials/headerNavbar') %>
    <!-- /Header -->

    <!-- product detail -->
    <div class="container products-wrapper">
      <div class="row">
        <div class="col-12">
          <h2 class="products-title">
            Detalle del producto: <%=productDetail.name%>
          </h2>
        </div>
      </div>
      <div class="product-detail">
        <div class="row">
          <div class="col-12 col-lg-8">
            <img
              src="/images/products/<%=productDetail.image%>"
              alt="product image"
              class="product-detail-img"
            />
            <p class="product-detail-description">
              <%=productDetail.description%>
            </p>
          </div>
          <div class="col-12 col-lg-4">
            <article class="product-detail-info">
              <h2 class="product-detail-title"><%=productDetail.name%></h2>

              <p class="product-detail-price small">
                <span>$<%=productDetail.price%></span>
                /
                <b><%=productDetail.discount%>% OFF</b>
              </p>
              <p class="product-detail-price">
                <%const toThousand = (n) =>
                n.toString().replace(/\B(?=(\d{3})+(?!\d))/g, '.') %> Precio
                Real: $<%= toThousand(productDetail.price)%>
              </p>
              <% if (productDetail.discount != 0) { %>
              <p class="product-detail-price">
                Precio Final: $<%= toThousand(productDetail.price *
                (100-productDetail.discount)/100) %>
              </p>
              <%}%>
              <ul class="actions-list">
                <li>
                  <i class="fas fa-credit-card"></i>
                  <p>Pagá en 12 cuotas sin interes</p>
                </li>
                <li>
                  <i class="fas fa-store"></i>
                  <p>Retiro gratis en locales del vendedor</p>
                </li>
              </ul>

              <a href="#" class="buy-now-button">COMPRAR AHORA</a>
              <hr />

              <a
                href="/products/edit/<%=productDetail.id%>"
                class="action-button edit"
                >EDITAR PRODUCTO</a
              >
              <form
                action="/products/<%=productDetail.id%>?_method=DELETE"
                method="POST"
                style="display: inline-flex"
              >
                <button type="submit" class="action-button delete">
                  ELIMINAR
                </button>
              </form>
            </article>
          </div>
        </div>
      </div>
    </div>
    <!-- /product detail -->

    <!-- footer -->
    <%- include('partials/footer') %>
    <!-- /footer -->
  </body>
</html>
